/**
 * The Main class of the Asteroids game.
 */
class Main {
    /** Initializes and starts an Asteroids game. */
    function void main() {
        var AsteroidsGame game;

        // Initialize the libraries
        do MathExt.init();
        do Ship.init();

        // Instatiate the game and start it running
        let game = AsteroidsGame.new();
        do game.run();

        // Dispose of the game and exit
        do game.dispose();
        return;
    }
}
