class Main {
    function void main() {
        var Ship ship;
        var int i, x, y;

        do MathExt.init();
        do Ship.init();

        do Screen.setColor(true); // black

        let x = 10;
        let y = 10;
        let i = 0;
        while (i < 361) {
            let ship = Ship.new(x, y, i);
            do ship.draw();
            let x = x + 20;
            let i = i + 15;
        }
        return;
    }
}
